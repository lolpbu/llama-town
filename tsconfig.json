{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,

    "plugins": [
      {
        "name": "typescript-styled-plugin",
      }
    ],

    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,

    "removeComments": true,
  },
  "exclude": [
    "node_modules"
  ]
}
